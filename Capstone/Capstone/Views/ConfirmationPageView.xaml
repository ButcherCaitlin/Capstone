<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Capstone.Views.ConfirmationPageView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Pick a Date:"
                   TextColor="Black" 
                   FontSize="Medium"
                   HorizontalTextAlignment="Center"/>
            <DatePicker x:Name="tourHomeDatePicker"
                        Format="D"
                        HorizontalOptions="Center"
                        TextColor="{StaticResource AccentItem}"
                        
                        />

            <Label Text="Pick a Time:"
                   TextColor="Black"
                   FontSize="Medium"
                   HorizontalTextAlignment="Center"/>
            <TimePicker x:Name="tourHomeTimePicker"
                        Format="T"
                        HorizontalOptions="Center"
                        TextColor="{StaticResource AccentItem}"
                       />
            
            <Button 
                Command="{Binding ConfirmClicked}" Text="Confirm Tour"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>